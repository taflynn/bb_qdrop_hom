FC=gfortran
FFLAG1=-I/mnt/storage/apps/eb/software/FFTW/3.3.10-gompi-2021b/include -L/mnt/storage/apps/eb/software/FFTW/3.3.10-gompi-2021b/lib -lfftw3_omp -lfftw3 -lm -fopenmp -L${HOME}/json-fortran/lib -ljsonfortran -I${HOME}/json-fortran/lib -L/mnt/storage/apps/eb/software/HDF5/1.12.1-gompi-2021b/lib -lhdf5_fortran -I/mnt/storage/apps/eb/software/HDF5/1.12.1-gompi-2021b/include -o gp_eqm
FFLAG2=-O3 -march=native
SRC= fft.f03 grid.f03 init.f03 rhs.f03 time.f03 gp_eqm.f03
OBJ=${SRC:.f03=.o}
gp_eqm: ${OBJ} 
	$(FC) $(OBJ) $(FFLAG2) $(FFLAG1) -o $@
%.o: %.f03
	$(FC) $(FFLAG1) -o $@ -c $<
clean:
	rm -r ./*.o ./*.mod
